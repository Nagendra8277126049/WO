        <locationX>239</locationX>
        <locationY>349</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>RecordExists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>RecordActionIdVar</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>updateRecordAction</targetReference>
            </connector>
            <label>RecordExists</label>
        </rules>
        <rules>
            <name>recordDoesnotExist</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>RecordActionIdVar</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>CheckForCaseClassification</targetReference>
            </connector>
            <label>recordDoesnotExist</label>
        </rules>
    </decisions>
