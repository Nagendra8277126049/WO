    <decisions>
        <description>It will check for the case classification : No Boot / System Performance</description>
        <name>CheckForCaseClassification</name>
        <label>CheckForCaseClassification</label>
        <locationX>712</locationX>
        <locationY>296</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>NoBootAction</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>No Boot</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>InsertRecordAction_NoBoot</targetReference>
            </connector>
            <label>NoBootAction</label>
        </rules>
        <rules>
            <name>SystemPerformanceAction</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Slow boot time</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Slow browser performance</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Slow performance with 100% Hard Drive activity using Windows 8 /8.1/10</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Slow shutdown</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>slow system performance</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>System does not shutdown</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>CaseClassificationValue</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>System freezing/locking up</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>InsertRecordAction_SlowSystemPerformance</targetReference>
            </connector>
            <label>SystemPerformanceAction</label>
        </rules>
    </decisions>
    <decisions>
        <name>CheckForRecordAction1</name>
